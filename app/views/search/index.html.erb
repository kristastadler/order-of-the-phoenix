<h1><%= @house %> has <%= @members.count %> Results in the Order of the Phoenix </h1>

<% @members.each do |member| %>
  <section class = "member">
    <p class="name"><b>Name:</b> <%= member.name %></p>
    <% if member.role != nil %>
      <p class="role"><b>Role:</b> <%= member.role %></p>
    <% end %>
    <p class="house"><b>House:</b> <%= member.house %></p>
    <% if member.patronus != nil %>
      <p class="patronus"><b>Patronus:</b> <%= member.patronus %></p>
    <% end %>
    <p> --------------------- </p>
<% end %>
